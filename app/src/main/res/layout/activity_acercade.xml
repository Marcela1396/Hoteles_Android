<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="0.32"
        app:srcCompat="@drawable/bogo" />

    <TextView
        android:id="@+id/agradecimientos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:fontFamily="cursive"
        android:text="Acerca de"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/acercaMi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:fontFamily="cursive"
        android:text="Sandra Marcela Guerrero C "
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:fontFamily="cursive"
        android:text="Ingenieria de Sistemas"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:fontFamily="cursive"
        android:text="Décimo Semestre"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:fontFamily="cursive"
        android:text="Facultad de Ingenieria"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:fontFamily="cursive"
        android:text="Universidad de Nariño"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:layout_weight="0.16"
            android:background="@color/colorPrimaryDark"
            android:onClick="regresar"
            app:srcCompat="@drawable/home"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="89dp" />
    </RelativeLayout>

</LinearLayout>